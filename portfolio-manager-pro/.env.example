# ========== TRADING SYMBOLS & TIMEFRAMES ==========
# SYMBOLS=XAUUSD,NASDAQ,EURUSD
# TIMEFRAMES=1,5,15,60,1440

# ========== PORTFOLIO SETTINGS ==========
INITIAL_CAPITAL=100000
MAX_STRATEGIES=50
DEFAULT_TIMEFRAME=60  # 1 hour

# ========== RISK MANAGEMENT ==========
MAX_DAILY_LOSS_PCT=5
DRAWDOWN_SAFE=4
DRAWDOWN_CAUTION=8
DRAWDOWN_CRITICAL=12

MAX_CORRELATION=0.8
MAX_POSITION_PCT=5
MAX_SECTOR_PCT=20

POSITION_SIZING=kelly  # kelly, fixed, adaptive
FIXED_LOT_SIZE=1.0
KELLY_FRACTION=0.25

# ========== RL CONFIGURATION ==========
RL_ENABLED=true
RL_MODEL_TYPE=PPO  # DQN, PPO, A2C
RL_LEARNING_RATE=0.0003
RL_BUFFER_SIZE=100000
RL_BATCH_SIZE=64
RL_GAMMA=0.99
RL_TAU=0.005

RL_TRAINING_FREQUENCY=daily  # hourly, daily, weekly
RL_RETRAINING_TRIGGER=performance  # fixed, performance
RL_MODEL_PATH=./models/
RL_TOTAL_TIMESTEPS=1000000

# ========== BACKTESTING ==========
BACKTEST_PARALLEL=true
BACKTEST_WORKERS=4
BACKTEST_COMMISSION=0.0001

# ========== MONITORING & ALERTS ==========
TELEGRAM_ENABLED=false
TELEGRAM_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

EMAIL_ENABLED=false
EMAIL_FROM=your_email@gmail.com
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_PASSWORD=your_app_password

# ========== LOGGING ==========
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=./logs/portfolio_manager.log
LOG_STRUCTURED=true

# ========== ENVIRONMENT ==========
